---
import "../styles/global.css";
const {
  title = "Camilo Cea Rodríguez — Full-Stack Web Developer",
  description = "Full-Stack Web Developer orientado a producto, SaaS y MVPs para startups. Next.js, Astro, TypeScript, Supabase.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content={description ??
        "Full-Stack Web Developer orientado a producto, SaaS y MVPs para startups. Next.js, Astro, TypeScript, Supabase."}
    />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description ??
        "Full-Stack Web Developer orientado a producto, SaaS y MVPs."}
    />
    <meta property="og:url" content="https://TU-DOMINIO.dev" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content={description ??
        "Full-Stack Web Developer orientado a SaaS y startups."}
    />
  </head>

  <body class="bg-slate-950 text-slate-50 antialiased">
    <div
      class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950"
    >
      <header
        class="sticky top-0 z-20 backdrop-blur bg-slate-950/70 border-b border-slate-800"
      >
        <nav
          class="max-w-5xl mx-auto flex items-center justify-between px-4 py-3"
        >
          <a href="#top" class="font-semibold tracking-tight text-slate-100">
            Kam<span class="text-sky-400">.</span>
          </a>

          {/* Desktop nav */}
          <div class="hidden sm:flex items-center gap-6 text-sm text-slate-300">
            <a href="#projects" class="hover:text-sky-400 transition-colors">
              Proyectos
            </a>
            <a href="#experience" class="hover:text-sky-400 transition-colors">
              Experiencia
            </a>
            <a href="#stack" class="hover:text-sky-400 transition-colors">
              Stack
            </a>
            <a href="#contact" class="hover:text-sky-400 transition-colors">
              Contacto
            </a>

            {/* Language switch */}
            <div class="flex items-center gap-2 text-xs">
              <span
                class="px-2 py-1 rounded-full bg-sky-500/10 border border-sky-500/40 text-sky-300"
              >
                ES
              </span>
              <a
                href="/en"
                class="px-2 py-1 rounded-full border border-slate-700 text-slate-300 hover:border-sky-400 hover:text-sky-400 transition-colors"
              >
                EN
              </a>
            </div>
          </div>

          {/* Mobile lang switch (simple) */}
          <div class="sm:hidden flex items-center gap-2 text-xs text-slate-300">
            <span
              class="px-2 py-1 rounded-full bg-sky-500/10 border border-sky-500/40 text-sky-300"
            >
              ES
            </span>
            <a
              href="/en"
              class="px-2 py-1 rounded-full border border-slate-700 hover:border-sky-400 hover:text-sky-400 transition-colors"
            >
              EN
            </a>
          </div>
        </nav>
      </header>

      <main id="top" class="max-w-5xl mx-auto px-4 pb-16 pt-8">
        <slot />
      </main>

      <footer class="border-t border-slate-800">
        <div
          class="max-w-5xl mx-auto px-4 py-6 text-xs text-slate-400 flex flex-wrap items-center justify-between gap-2"
        >
          <span>© {new Date().getFullYear()} Camilo Cea Rodríguez.</span>
          <span>Full-Stack · SaaS · Startups</span>
        </div>
      </footer>
    </div>
  </body>
</html>
